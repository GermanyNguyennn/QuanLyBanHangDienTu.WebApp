<div class="header_top">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<div class="contactinfo">
					<ul class="nav nav-pills">
						<li><a href="#"><i class="fa fa-phone"></i> 0964429403</a></li>
						<li><a href="#"><i class="fa fa-envelope"></i> manhducnguyen23092003@gmail.com</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="header-middle">
	<div class="container">
		<div class="row">
			<div class="col-sm-4">
			</div>
			<div class="col-sm-8">
				<div class="shop-menu pull-right">
					<ul class="nav navbar-nav">
						@{
							var isAdmin = User.IsInRole("Admin");
						}

						@if (User.Identity?.IsAuthenticated ?? false)
						{
							@* ADMIN *@
							if (isAdmin)
							{
								<li>
									<a asp-area="Admin" asp-controller="Product" asp-action="Index">
										<i class="fa fa-cogs"></i> Admin
									</a>
								</li>
							}

							@* MENU NGƯỜI DÙNG CHUNG *@
							<li>
								<a asp-area="" asp-controller="Account" asp-action="HistoryOrder">
									<i class="fa fa-history"></i> Lịch Sử
								</a>
							</li>

							<li>
								<a asp-area="" asp-controller="Cart" asp-action="Index">
									<i class="fa fa-shopping-cart"></i> Giỏ Hàng
								</a>
							</li>

							<li>
								<a asp-area="" asp-controller="Account" asp-action="UserOrder">
									<i class="fa fa-user"></i> Thông Tin Cá Nhân
								</a>
							</li>

							<li>
								<a asp-area="" asp-controller="Account" asp-action="ChangePassword">
									<i class="fa fa-key"></i> Đổi Mật Khẩu
								</a>
							</li>

							@* TRANG CHỦ + ĐĂNG XUẤT *@
							<li>
								<a asp-area="" asp-controller="Home" asp-action="Index">
									<i class="fa fa-home"></i> Trang Chủ
								</a>
							</li>

							<li>
								<a asp-area="" asp-controller="Account" asp-action="Logout">
									<i class="fa fa-lock"></i> Xin Chào, @User.Identity.Name. Đăng Xuất
								</a>
							</li>
						}
						else
						{
							<li>
								<a asp-area="" asp-controller="Account" asp-action="Login">
									<i class="fa fa-lock"></i> Đăng Nhập
								</a>
							</li>
						}

					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="header-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-9">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<div class="mainmenu pull-left">
					<ul class="nav navbar-nav collapse navbar-collapse">
						<li><a asp-controller="Home" asp-action="Index" class="active">Trang Chủ</a></li>
						<li><a asp-controller="Cart" asp-action="Index">Giỏ Hàng</a></li>
						<li><a asp-controller="Home" asp-action="Contact">Liên Hệ</a></li>
					</ul>
				</div>
			</div>
			<div class="col-sm-3">
				<form asp-action="Search" asp-controller="Product" method="POST">
					<div class="search_box pull-right">
						<input type="text" placeholder="Search" name="searchTerm" />
						<button class="btn btn-warning" type="submit">Tìm Kiếm</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>