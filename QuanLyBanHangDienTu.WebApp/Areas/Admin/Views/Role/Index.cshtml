@using Microsoft.AspNetCore.Identity
@using QuanLyBanHangDienTu.WebApp.Repository
@using QuanLyBanHangDienTu.WebApp.Repository.Validation
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Danh Sách Vai Trò";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<div class="">
    <p><a asp-controller="Role" asp-action="Add" class="btn btn-warning btn-sm">Thêm Vai Trò</a></p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col" style="vertical-align: middle;">Id</th>
                <th scope="col" style="vertical-align: middle;">Vai Trò</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="col" style="vertical-align: middle;">@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Role" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    </td>
                    <td>
                        <form asp-controller="Role"
                              asp-action="Delete"
                              asp-route-id="@item.Id"
                              method="post"
                              onsubmit="return confirm('Bạn có chắc chắn muốn xoá bản ghi này?');">

                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                Xoá
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Paging" model="@pager" />
</div>