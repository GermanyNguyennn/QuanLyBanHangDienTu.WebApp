@using QuanLyBanHangDienTu.WebApp.Models
@using QuanLyBanHangDienTu.WebApp.Repository
@using QuanLyBanHangDienTu.WebApp.Repository.Validation

@model IEnumerable<BrandModel>
@{
    ViewData["Title"] = "Danh Sách Thương Hiệu";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<div class="">
    <p><a asp-controller="Brand" asp-action="Add" class="btn btn-warning btn-sm">Thêm Thương Hiệu</a></p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-center" style="vertical-align: middle;">Id</th>
                <th scope="col" class="text-center" style="vertical-align: middle;">Tên Thương Hiệu</th>
                <th scope="col" class="text-center" style="vertical-align: middle;">Mô Tả</th>
                <th scope="col" class="text-center" style="vertical-align: middle;">Slug</th>
                <th scope="col" class="text-center" style="vertical-align: middle;">Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Slug</td>
                    <td>
                        @if (item.Status == 1)
                        {
                                <span class="text text-success">Hiển Thị</span>
                        }
                        else
                        {
                                <span class="text text-danger">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Brand" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    </td>
                    <td>
                        <form asp-controller="Brand"
                              asp-action="Delete"
                              asp-route-id="@item.Id"
                              method="post"
                              onsubmit="return confirm('Bạn có chắc chắn muốn xoá bản ghi này?');">

                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                Xoá
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Paging" model="@pager" />
</div>